<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	
	<package name="default" extends="struts-default" namespace="/">
		<action name="home" class="br.com.ebix.escola.action.HomeAction">
			<result name="success">index.jsp</result>
		</action>
		<action name="alunos">
			<result type="redirect">/alunos/listar</result>
		</action>
		<action name="professores">
			<result type="redirect">/professores/listar</result>
		</action>
		<action name="materias">
			<result type="redirect">/materias/listar</result>
		</action>
	</package>
	
	<package name="alunos" extends="default" namespace="/alunos">
		<action name="listar" class="br.com.ebix.escola.action.AlunosAction" method="listar">
			<result name="success">listar.jsp</result>
		</action>
		<action name="adicionarFormulario" class="br.com.ebix.escola.action.AlunosAction">
			<result name="success">adicionarFormulario.jsp</result>
		</action>
		<action name="atualizarFormulario" class="br.com.ebix.escola.action.AlunosAction">
			<result name="success">atualizarFormulario.jsp</result>
		</action>
		
		<action name="adicionar" class="br.com.ebix.escola.action.AlunosAction" method="adicionar">
			<result name="success" type="redirect">alunos</result>
			<result name="input">adicionarFormulario.jsp</result>
		</action>
		<action name="atualizar" class="br.com.ebix.escola.action.AlunosAction" method="atualizar">
			<result name="success" type="redirect">alunos</result>
			<result name="input">atualizarFormulario.jsp</result>
		</action>
		<action name="deletar" class="br.com.ebix.escola.action.AlunosAction" method="remover">
			<result name="success" type="redirect">alunos</result>
		</action>
	</package>
	<package name="professores" extends="default" namespace="/professores">
		<action name="listar" class="br.com.ebix.escola.action.ProfessoresAction" method="listar">
			<result name="success">listar.jsp</result>
		</action>
		<action name="adicionarFormulario" class="br.com.ebix.escola.action.ProfessoresAction">
			<result name="success">adicionarFormulario.jsp</result>
		</action>
		<action name="atualizarFormulario" class="br.com.ebix.escola.action.ProfessoresAction">
			<result name="success">atualizarFormulario.jsp</result>
		</action>
		
		<action name="adicionar" class="br.com.ebix.escola.action.ProfessoresAction" method="adicionar">
			<result name="success" type="redirect">listar</result>
			<result name="input">adicionarFormulario.jsp</result>
		</action>
		<action name="atualizar" class="br.com.ebix.escola.action.ProfessoresAction" method="atualizar">
			<result name="success" type="redirect">listar</result>
			<result name="input">atualizarFormulario.jsp</result>
		</action>
		<action name="deletar" class="br.com.ebix.escola.action.ProfessoresAction" method="remover">
			<result name="success" type="redirect">listar</result>
		</action>
	</package>
	<package name="materias" extends="default" namespace="/materias">
		<action name="listar" class="br.com.ebix.escola.action.MateriasAction">
			<result name="success">listar.jsp</result>
		</action>
	</package>
</struts>